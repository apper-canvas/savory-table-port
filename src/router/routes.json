{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Homepage is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/menu": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Menu page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/reservations": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to make reservations",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
"/reviews": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be authenticated to view reviews",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/contact": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Contact page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Login page is public",
            "rule": "public"
          }
        ]
      },
      "excludeRedirectQuery": true
    }
  },
  "/signup": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Signup page is public",
            "rule": "public"
          }
        ]
      },
      "excludeRedirectQuery": true
    }
  },
  "/callback": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Callback page is public",
            "rule": "public"
          }
        ]
      },
      "excludeRedirectQuery": true
    }
  },
  "/error": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Error page is public",
            "rule": "public"
          }
        ]
      },
      "excludeRedirectQuery": true
    }
  },
  "/reset-password/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Reset password page is public",
            "rule": "public"
          }
        ]
      },
      "excludeRedirectQuery": true
    }
  },
  "/prompt-password/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Prompt password page is public",
            "rule": "public"
          }
        ]
      },
      "excludeRedirectQuery": true
    }
  }
}